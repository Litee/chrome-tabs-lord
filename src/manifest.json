{
  "manifest_version": 2,
  "name": "Tabs Lord",
  "description": "Chrome extension that shows vertical tabs in addition to standard horizontal ones.",
  "version": "0.1.25",
  "icons": {
    "16": "images/tabs-lord-icon-dark-16.png",
    "32": "images/tabs-lord-icon-dark-32.png",
    "48": "images/tabs-lord-icon-dark-48.png",
    "128": "images/tabs-lord-icon-dark-128.png",
    "256": "images/tabs-lord-icon-dark-256.png"
  },
  "background": {
    "scripts": [
      "scripts/browser-action.js"
    ]
  },
  "browser_action": {
    "default_icon": "images/tabs-lord-icon-dark-16.png",
    "default_title": "Open Sidebar"
  },
  "permissions": [
    "tabs",
    "system.display",
    "bookmarks",
    "chrome://favicon/"
  ],
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "windows": "Alt+Q"
      }
    }
  }
}