{
  "manifest_version": 2,
  "name": "Tabs Lord",
  "description": "Extension for managing large number of tabs",
  "version": "0.1.6",
  "icons": {
    "16": "images/tabs-lord-icon-16x16.png",
    "32": "images/tabs-lord-icon-32x32.png",
    "48": "images/tabs-lord-icon-48x48.png",
    "128": "images/tabs-lord-icon-128x128.png"
  },
  "background": {
    "scripts": [
      "scripts/main.js"
    ]
  },
  "browser_action": {
    "default_icon": "images/tabs-lord-icon-19x19.png",
    "default_title": "Open Tabs Lord panel"
  },
  "permissions": [
    "tabs",
    "system.display",
    "contextMenus"
  ]
}